<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :Логин %><br />
  <%= f.text_field :login,autofocus: true %></div>

  <div><%= f.label :Имя %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :Фамилия %><br />
  <%= f.text_field :lastname %></div>

  <div><%= f.label :Возраст %><br />
  <%= f.text_field :age %></div>
  
  <div><%= f.label :Хобби %><br />
  <%= f.text_area :hobbi %></div>

	<div><%= f.label :email %><br />
  <%= f.email_field :email  %></div>

  <div><%= f.label :Пароль %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :Повторите_пароль %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.submit "Sign up", calss: "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>
